        signature: '1qlV3Z6hjBcVU8RlyJCkArHq2Ovry0mj7rd38LSSw9VHODogyeER45op_6V4F1MN9rUn2piPOVMcqtH79SIIRQA',
        data: 'eyJ0eXAiOiJKV1QiLCJhbGciOiJFUzI1NkstUiJ9.'
      }

      function toDate(timestamp) {
        let current_datetime = new Date(timestamp * 1000)
        let formatted_date = current_datetime.getDate() + "/" + (current_datetime.getMonth() + 1) + "/" + current_datetime.getFullYear() + " " + current_datetime.getHours() + ":" + current_datetime.getMinutes() + ":" + current_datetime
          .getSeconds()
        return formatted_date
      }

      function populateVC(jwt) {
        $('#vc1').html('<b>Subject</b>: ' + jwt.payload.aud);
        if (jwt.payload.aud == 'did:ethr:000') {
          $('#vc1').append(' <span class="badge badge-pill badge-success">Match Sender</span>');
        } else {
          $('#vc1').append(' <span class="badge badge-pill badge-warning">Doesn\'t Match Sender</span>');
        }

        $('#vc2').html('<b>Issuer</b>: ' + jwt.payload.iss);
        $('#vc3').html('<b>Status</b>: ');

        //TODO check TCM
        if (true) {
          $('#vc3').append(' <span class="badge badge-pill badge-success">Issuer Recognized</span>');
        } else if (false) {
          $('#vc3').append(' <span class="badge badge-pill badge-warning">Issuer Unknown</span>');
        } else {
          $('#vc3').append(' <span class="badge badge-pill badge-danger">Issuer Blacklisted</span>');
        }

        if (Number(jwt.payload.exp * 1000) < new Date()) {
          $('#vc3').append(' <span class="badge badge-pill badge-warning">Expired</span>');
        } else if (true) {
          $('#vc3').append(' <span class="badge badge-pill badge-success">Valid</span>');
        } else {
          $('#vc3').append(' <span class="badge badge-pill badge-danger">Revoked</span>');
          $('#vc3').append('</li><li class="list-group-item">Revoked Reason: Inspection');
        }

        $('#vc4').html('<b>Expiry Date</b>: ' + toDate(jwt.payload.exp));
        $('#vc5').html('<b>Type</b>: ' + jwt.payload.type);
        $('#vc6').html('');
        for (var k in jwt.payload.own.name) {
          if (jwt.payload.own.name.hasOwnProperty(k)) {
            $('#vc6').append("<details> <summary> " + k + " </summary> <p> " + jwt.payload.own.name[k] + "</p> </details>");
          }
        }
      }

      populateVC(jwt);
      $("#vcContentBefore").fadeOut("slow", function() {
        $("#vcContentAfter").fadeIn("fast");
      });


