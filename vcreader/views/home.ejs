    $(function() {
      var socket = io();

      var jwt = {
        header: {
          typ: 'JWT',
          alg: 'ES256K-R'
        },
        payload: {
          iat: 1557848205,
          exp: 1557934605,
          aud: 'did:ethr:0xbc3ae59bc76f894822622cdef7a2018dbe353840',
          type: 'shareResp',
          own: {
            name: {
              'type': 'scan',
              'hospital': 'ciao'
            }
          },
          req: 'eyJ0eXAiOiJKV1QiLCJhbGciOiJFUzI1NkstUiJ9.eyJpYXQiOjE1NTc4NDgxNzcsImV4cCI6MTU1Nzg0ODc3NywicmVxdWVzdGVkIjpbIm5hbWUiXSwiY2FsbGJhY2siOiJodHRwczovLzdlNzk5ZjM5Lm5ncm9rLmlvL3ZjP3NvY2tldGlkPXhJUmk5eVhkb2hYUGtYWWVBQUFBIiwidHlwZSI6InNoYXJlUmVxIiwiaXNzIjoiZGlkOmV0aHI6MHhiYzNhZTU5YmM3NmY4OTQ4MjI2MjJjZGVmN2EyMDE4ZGJlMzUzODQwIn0.aPcW8NPZgkL8LvkczwJOkpKiDoRbCyO6jniNe_bJO_i4OiU0aSmwmuASclL9cc7EgFz0Zp908uz1laylylktxQA',
